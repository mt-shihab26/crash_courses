indent_size = 2
indent_style = space

[*.rake]
indent_size = 2
indent_style = space

[Rakefile]
indent_size = 2
indent_style = space

[Gemfile]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.md]
